<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat" >
    </style>

    <style name="AppTheme2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Yellow">
        <item name="android:textColor">@color/button_yellow_text</item>
        <item name="android:background">@drawable/button_yellow</item>
    </style>

    <style name="Button.Grey">
        <item name="android:background">@drawable/button_grey</item>
    </style>

    <style name="Button.Blue">
        <item name="android:textColor">@color/button_blue_text</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>
    <style name="TextAppearance.F1" parent="TextAppearance.AppCompat.Headline">

    </style>

    <style name="TextAppearance.F2" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="android:textSize">23sp</item>
    </style>

    <style name="TextAppearance.F3" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.F4" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.F5" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="android:textSize">14sp</item>
    </style>
</resources>
